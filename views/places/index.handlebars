<h1>List of places</h1>

<a href="/places/add" class="btn btn-default">add new place</a><br/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each places}}
            <tr>
                <td>{{name}}</td>
                <td>{{address}}</td>
                <td>
                    <a href="/places/edit/{{id}}"> <span class="glyphicon glyphicon-edit"></span> Edit</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<a href="/places/add" class="btn btn-default">add new place</a><br/>