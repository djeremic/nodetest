<div class="row" style="margin-top: 150px; margin-bottom: 100px;">
    <div class="col-xs-2 col-lg-3"></div>
    <div class="col-xs-9 col-lg-8">
        <h1>Forgot Your Password?</h1>

        <h4>Reset you password</h4>

        {{#if errors.general}}
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                {{{errors.general.[0]}}}
            </div>
        {{/if}}

        <div class="row">
            <div class="col-lg-4">
                <form id="register" action="/passwords/reset" method="post">
                    <input type="hidden" name="user[id]" value="{{id}}">
                    <div class="form-group {{#if errors.password}}has-error error{{/if}}">
                        <label class="control-label" for="password">Password: </label>
                        <input type="password" class="form-control" id="password" name="user[password]" />
                        {{#if errors.password}}<span class="cos">{{errors.password.[0]}}</span>{{/if}}
                    </div>
                    <div class="form-group {{#if errors.confirmPassword}}has-error error{{/if}}">
                        <label class="control-label" for="confirmPassword">Confirm Password: </label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" />
                        {{#if errors.confirmPassword}}<span class="cos">{{errors.confirmPassword.[0]}}</span>{{/if}}
                    </div>
                    <button class="btn btn-lg btn-warning">Submit</button>
                </form>
            </div>
        </div>
        <div class="col-xs-1">

        </div>
    </div>
</div>