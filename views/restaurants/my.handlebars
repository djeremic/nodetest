<div id="fb-root"></div>
<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=1506984952881668&version=v2.3";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="container" style="margin-top: 100px;min-height: 500px;">
    <h1>List of restaurants
        <div class="pull-right">
            <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button"></div>
        </div>
    </h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            {{#if session.user}}
                <th></th>
            {{/if}}
        </tr>
        </thead>
        <tbody>
        {{#each restaurants}}
            <tr>
                <td>{{name}}</td>
                <td>{{address}}</td>
                <td>
                    {{#if ../session.user}}
                        {{#equals ../session.user.id user.id}}
                            <a href="#" data-id="{{id}}" class="remove-restaurant"> <span class="glyphicon glyphicon-remove"></span> remove</a>
                        {{/equals}}
                    {{/if}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<script src="/javascripts/custom/favourites.js"></script>