<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    {{#if addRestaurant}}
        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
    {{/if}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
</head>
<body>


<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Paris Eats</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="/restaurants">Restaurants</a></li>
                {{#if session.user}}
                    <li><a href="/my-restaurants">My Restaurants</a></li>
                    <li><a href="#">Welcome {{session.user.first_name}}</a></li>
                {{else}}
                    <li><a href="/users/login">Login</a></li>
                {{/if}}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>


<div class="container">
    <div class="starter-template">
        {{{body}}}
    </div>
</div>


<script src="/javascripts/bootstrap.min.js"></script>
{{#if addRestaurant}}
    <script src="/javascripts/custom/maps-geocoding.js"></script>
    <script src="/javascripts/magicsuggest-min.js"></script>
    <script src="/javascripts/custom/tags-controller.js"></script>
    <script src="/javascripts/custom/dynamic-fields.js"></script>
{{/if}}
<script src="/javascripts/custom/favourites.js"></script>
