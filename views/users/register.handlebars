<h1>Register</h1>

{{#if errors.general}}
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        {{{errors.general.[0]}}}
    </div>
{{/if}}

<div class="row">
    <div class="col-lg-4">
        <form id="register" action="/users/register" method="post">
            <div class="form-group {{#if errors.email}}has-error error{{/if}}">
                <label class="control-label" for="email">Email: </label>
                <input type="email" class="form-control" id="email" name="user[email]" />
                {{#if errors.email}}<span class="cos">{{errors.email.[0]}}</span>{{/if}}
            </div>
            <div class="form-group {{#if errors.first_name}}has-error error{{/if}}">
                <label class="control-label" for="first_name">First Name: </label>
                <input type="text" class="form-control" id="first_name" name="user[first_name]" />
                {{#if errors.first_name}}<span class="cos">{{errors.first_name.[0]}}</span>{{/if}}
            </div>
            <div class="form-group {{#if errors.last_name}}has-error error{{/if}}">
                <label class="control-label" for="last_name">Last Name: </label>
                <input type="text" class="form-control" id="last_name" name="user[last_name]" />
                {{#if errors.last_name}}<span class="cos">{{errors.last_name.[0]}}</span>{{/if}}
            </div>
            <div class="form-group {{#if errors.password}}has-error error{{/if}}">
                <label class="control-label" for="password">Password: </label>
                <input type="password" class="form-control" id="password" name="user[password]" />
                {{#if errors.password}}<span class="cos">{{errors.password.[0]}}</span>{{/if}}
            </div>
            <div class="form-group {{#if errors.confirmPassword}}has-error error{{/if}}">
                <label class="control-label" for="confirmPassword">Confirm Password: </label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" />
                {{#if errors.confirmPassword}}<span class="cos">{{errors.confirmPassword.[0]}}</span>{{/if}}
            </div>
            <button class="btn btn-default">Submit</button>
        </form>
    </div>
</div>