<div class="row" style="margin-top: 150px; margin-bottom: 40px;">
    <div class="col-xs-2 col-lg-3"></div>
    <div class="col-xs-9 col-lg-8">

        <h1>Login</h1>

        {{#if errors.general}}
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                {{errors.general.[0]}}
            </div>
        {{/if}}

        <div class="row">
            <div class="col-lg-4">
                <form id="register" action="/users/login" method="post" role="form">
                    <div class="form-group {{#if errors.email}}has-error error{{/if}}">
                        <label class="control-label" for="email">Email: </label>
                        <input type="email" class="form-control" id="email" name="user[email]" />
                        {{#if errors.email}}<span class="cos">{{errors.email.[0]}}</span>{{/if}}
                    </div>
                    <div class="form-group {{#if errors.password}}has-error error{{/if}}">
                        <label class="control-label" for="password">Password: </label>
                        <input type="password" class="form-control" id="password" name="user[password]" />
                        {{#if errors.password}}<span class="cos">{{errors.password.[0]}}</span>{{/if}}
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg">Login</button>
                </form>
            </div>
        </div>
        <div class="row" style="padding-top: 10px">
            <div class="col-lg-4">
                <p>Don't have an account?</br>
                    <a href="/users/register">Register</a></p>
            </div>
        </div>
        <div class="col-xs-1">

        </div>
    </div>
</div>